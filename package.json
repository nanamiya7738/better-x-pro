{
  "name": "better-x-pro",
  "version": "1.0.0",
  "description": "X PRO を少しだけマシにするChrome拡張機能",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "scripts": {
    "build": "set NODE_ENV=production&& webpack --mode=production --config config/webpack.config.js",
    "dev": "set NODE_ENV=development&& webpack --mode=development --watch --config config/webpack.config.js",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add build/* -o ./extension.zip"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.6.2",
    "@types/chrome": "^0.0.246",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^0.10.1",
    "npm-run-all": "^4.1.5",
    "size-plugin": "^2.0.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "prettier": "^3.0.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}